{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "cd _build && cmake -DCMAKE_BUILD_TYPE=Debug -DUSEWX=YES -DEACP=NO -DEDITORCOMP=NO -DPYTHON=YES .."
        },
        {
            "label": "make",
            "type": "shell",
            "command": "cd _build && make -j12",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}